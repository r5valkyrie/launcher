{
  "name": "r5vlauncher",
  "type": "module",
  "version": "0.8.1",
  "main": "electron/main.js",
  "icon": "build/icon.png",
  "scripts": {
    "web": "astro dev",
    "dev": "node scripts/bundleElectron.cjs && concurrently \"astro dev\" \"wait-on http://localhost:4321 && cross-env VITE_DEV_SERVER_URL=http://localhost:4321 electron .\"",
    "build:web": "astro build",
    "build": "npm run build:web && node scripts/bundleElectron.cjs && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false ELECTRON_BUILDER_DISABLE_CODE_SIGNING=true electron-builder ",
    "preview": "astro preview",
    "astro": "astro",
    "release": "npm run build:web && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false ELECTRON_BUILDER_DISABLE_CODE_SIGNING=true dotenv -e .env -- electron-builder --win nsis --publish always",
    "release:dry": "npm run build:web && dotenv -e .env -- electron-builder --win nsis --publish never",
    "release:patch": "npm version patch && git push && npm run release",
    "release:minor": "npm version minor && git push && npm run release",
    "release:major": "npm version major && git push && npm run release"
  },
  "dependencies": {
    "bytenode": "^1.4.0",
    "electron-log": "^5.2.2",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@astrojs/react": "^4.3.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "astro": "^5.13.5",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "daisyui": "^5.1.7",
    "dotenv-cli": "^10.0.0",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "javascript-obfuscator": "^4.1.0",
    "esbuild": "^0.23.0",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "org.playvalkyrie.r5vlauncher",
    "productName": "R5Valkyrie Launcher",
    "artifactName": "${productName} Setup ${version}.${ext}",
    "icon": "build/icon.ico",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "r5valkyrie",
        "repo": "launcher_releases"
      }
    ],
    "files": [
      "dist/**",
      "electron/**",
      "package.json",
      "node_modules/**"
    ],
    "npmRebuild": false,
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "asar": true,
    "compression": "maximum",
    "afterPack": "scripts/afterPack.cjs",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png"
    },
    "protocols": [
      {
        "name": "R5V Link",
        "schemes": [
          "r5v"
        ]
      }
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "include": "scripts/installer.nsh",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    }
  }
}
